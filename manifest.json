{

	"name": "LocalNotes",
	"description": "Chrome extension for storing simple text notes in the browser's local storage.",
	"version": "1.1",

	"manifest_version": 2,

	"browser_action": {
		"default_title": "LocalNotes",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"windows": "Alt+Shift+L",
				"linux": "Alt+Shift+L",
				"mac": "Alt+Shift+L"
			}
		}
	},

	"permissions": [
		"storage"
	]

}
